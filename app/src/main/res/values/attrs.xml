<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="Keyboard">
    <attr name="fillColour" format="color" />
    <attr name="keysAreShiftable" format="boolean" />
    <attr name="keyWidth" format="dimension|fraction" />
    <attr name="keyHeight" format="dimension|fraction" />
    <attr name="keyFillColour" format="color" />
    <attr name="keyBorderColour" format="color" />
    <attr name="keyBorderThickness" format="dimension" />
    <attr name="keyTextColour" format="color" />
    <attr name="keyTextSwipeColour" format="color" />
    <attr name="keyTextSize" format="dimension" />
    <attr name="keyTextOffsetX" format="dimension" />
    <attr name="keyTextOffsetY" format="dimension" />
    <!-- TODO: separate balance to 'Row' and 'Key' -->
    <attr name="valueText" format="string" />
    <attr name="displayText" format="string" />
    <attr name="valueTextShifted" format="string" />
    <attr name="isLongPressable" format="boolean" />
    <attr name="isRepeatable" format="boolean" />
    <attr name="isSwipeable" format="boolean" />
    <attr name="isShiftable" format="boolean" />
    <attr name="isExtendedLeft" format="boolean" />
    <attr name="isExtendedRight" format="boolean" />
  </declare-styleable>
  <declare-styleable name="Row">
    <attr name="offsetX" format="dimension|fraction" />
    <attr name="keysAreShiftable" />
    <attr name="keyWidth" />
    <attr name="keyHeight" />
    <attr name="keyFillColour" />
    <attr name="keyBorderColour" />
    <attr name="keyBorderThickness" />
    <attr name="keyTextColour" />
    <attr name="keyTextSwipeColour" />
    <attr name="keyTextSize" />
    <attr name="keyTextOffsetX" />
    <attr name="keyTextOffsetY" />
  </declare-styleable>
</resources>
