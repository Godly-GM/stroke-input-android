<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MainActivityText">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">@dimen/font_size__main_activity</item>
    <item name="android:paddingTop">
      @dimen/padding_top__main_activity__text
    </item>
    <item name="android:paddingBottom">
      @dimen/padding_bottom__main_activity__text
    </item>
  </style>
  <style name="MainActivityButton">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">
      @dimen/font_size__main_activity__button
    </item>
  </style>
  <style name="StrokeInputAlert" parent="Theme.StrokeInput">
    <item name="android:windowBackground">@color/very_dark_grey</item>
  </style>
  <style name="StrokeInputText" parent="android:Widget.EditText">
    <item name="android:textColor">?android:textColor</item>
  </style>
  <style name="StrokeInputToolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="titleTextColor">?attr/colorOnPrimary</item>
  </style>
</resources>
