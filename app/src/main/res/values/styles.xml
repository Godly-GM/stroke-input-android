<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MainActivityText">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">@dimen/activity_main_font_size</item>
    <item name="android:paddingTop">
      @dimen/activity_main_text_padding_top
    </item>
    <item name="android:paddingBottom">
      @dimen/activity_main_text_padding_bottom
    </item>
  </style>
  <style name="MainActivityButton">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/activity_main_font_size_button</item>
  </style>
  <style name="StrokeInputAlert" parent="Theme.StrokeInput">
    <item name="android:windowBackground">@color/very_dark_grey</item>
  </style>
  <style name="StrokeInputText" parent="android:Widget.EditText">
    <item name="android:textColor">?android:textColor</item>
  </style>
  <style name="StrokeInputToolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="titleTextColor">?attr/colorOnPrimary</item>
  </style>
</resources>
