<?xml version="1.0" encoding="utf-8"?>
<Keyboard
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:keyHeight="@dimen/key_height__strokes"
  app:keyWidth="@dimen/key_width__digit"
  app:keyTextSize="@dimen/font_size__strokes"
  app:keyTextOffsetY="@dimen/baseline_correction__strokes"
  app:keyFillColour="@color/key_fill"
>
  <Row
    app:keyHeight="@dimen/key_height__strokes_digit"
    app:keyTextSize="@dimen/font_size__strokes_digit"
    app:keyTextOffsetY="@dimen/baseline_correction__strokes_digit"
  >
    <!-- Digits -->
    <Key app:keyValueText="1" />
    <Key app:keyValueText="2" />
    <Key app:keyValueText="3" />
    <Key app:keyValueText="4" />
    <Key app:keyValueText="5" />
    <Key app:keyValueText="6" />
    <Key app:keyValueText="7" />
    <Key app:keyValueText="8" />
    <Key app:keyValueText="9" />
    <Key app:keyValueText="0" />
  </Row>
  <Row app:keyWidth="@dimen/key_width__strokes_stroke">
    <!-- U+FF1B FULLWIDTH SEMICOLON -->
    <Key app:keyValueText="；" />
    <!-- U+31D0 CJK STROKE H -->
    <Key
      app:keyValueText="STROKE_1"
      app:keyDisplayText="㇐"
      app:keyTextSize="@dimen/font_size__strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D1 CJK STROKE S -->
    <Key
      app:keyValueText="STROKE_2"
      app:keyDisplayText="㇑"
      app:keyTextSize="@dimen/font_size__strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D2 CJK STROKE P -->
    <Key
      app:keyValueText="STROKE_3"
      app:keyDisplayText="㇒"
      app:keyTextSize="@dimen/font_size__strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+FF01 FULLWIDTH EXCLAMATION MARK -->
    <Key app:keyValueText="！" />
  </Row>
  <Row app:keyWidth="@dimen/key_width__strokes_stroke">
    <!-- U+3001 IDEOGRAPHIC COMMA -->
    <Key app:keyValueText="、" />
    <!-- U+31D4 CJK STROKE D -->
    <Key
      app:keyValueText="STROKE_4"
      app:keyDisplayText="㇔"
      app:keyTextSize="@dimen/font_size__strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D6 CJK STROKE HG -->
    <Key
      app:keyValueText="STROKE_5"
      app:keyDisplayText="㇖"
      app:keyTextSize="@dimen/font_size__strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+FF1F FULLWIDTH QUESTION MARK -->
    <Key app:keyValueText="？" />
    <!-- Backspace: U+232B ERASE TO THE LEFT -->
    <Key
      app:keyValueText="BACKSPACE"
      app:keyDisplayText="⌫"
      app:keyIsRepeatable="true"
      app:keyTextSize="@dimen/font_size__strokes_backspace"
      app:keyIsPreviewable="false"
    />
  </Row>
  <Row
    app:keyHeight="@dimen/key_height__strokes_space_bar"
    app:keyWidth="@dimen/key_width__strokes_stroke"
  >
    <!-- Switch to strokes symbols 1 keyboard: U+FF08, U+FF09, U+FF1A -->
    <Key
      app:keyValueText="SWITCH_TO_STROKES_SYMBOLS_1"
      app:keyDisplayText="（）："
      app:keyTextSize="@dimen/font_size__switch_key"
      app:keyTextOffsetY="@dimen/baseline_correction__switch_key"
      app:keyIsPreviewable="false"
    />
    <!-- U+FF0C FULLWIDTH COMMA -->
    <Key
      app:keyValueText="，"
      app:keyWidth="@dimen/key_width__digit"
    />
    <!-- Space bar: U+25C0, U+25B6 (triangles) -->
    <Key
      app:keyValueText="SPACE"
      app:keyDisplayText="@string/display_text__strokes_space_bar"
      app:keyIsLongPressable="true"
      app:keyIsSwipeable="true"
      app:keyTextSize="@dimen/font_size__space_bar"
      app:keyTextOffsetY="@dimen/baseline_correction__space_bar"
      app:keyTextColour="@color/space_bar_text"
      app:keyWidth="@dimen/key_width__space_bar"
      app:keyIsPreviewable="false"
    />
    <!-- U+3002 IDEOGRAPHIC FULL STOP -->
    <Key
      app:keyValueText="。"
      app:keyWidth="@dimen/key_width__digit"
    />
    <!-- Enter key: U+23CE RETURN SYMBOL -->
    <Key
      app:keyValueText="ENTER"
      app:keyDisplayText="⏎"
      app:keyTextSize="@dimen/font_size__enter_key"
      app:keyFillColour="@color/enter_key_fill"
      app:keyIsPreviewable="false"
    />
  </Row>
</Keyboard>
