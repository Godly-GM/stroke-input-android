<?xml version="1.0" encoding="utf-8"?>
<Keyboard
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:keyHeight="@dimen/key_height_strokes"
  app:keyWidth="@dimen/key_width_digit"
  app:keyTextSize="@dimen/key_text_font_size_strokes"
  app:keyTextOffsetY="@dimen/key_text_baseline_correction_strokes"
  app:keyFillColour="@color/key_fill"
>
  <Row
    app:keyHeight="@dimen/key_height_strokes_digit"
    app:keyTextSize="@dimen/key_text_font_size_strokes_digit"
    app:keyTextOffsetY="@dimen/key_text_baseline_correction_strokes_digit"
  >
    <!-- Digits -->
    <Key app:valueText="1" />
    <Key app:valueText="2" />
    <Key app:valueText="3" />
    <Key app:valueText="4" />
    <Key app:valueText="5" />
    <Key app:valueText="6" />
    <Key app:valueText="7" />
    <Key app:valueText="8" />
    <Key app:valueText="9" />
    <Key app:valueText="0" />
  </Row>
  <Row app:keyWidth="@dimen/key_width_strokes_stroke">
    <!-- U+FF1F FULLWIDTH QUESTION MARK -->
    <Key
      app:valueText="？"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- U+FF01 FULLWIDTH EXCLAMATION MARK -->
    <Key
      app:valueText="！"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- U+31D0 CJK STROKE H -->
    <Key
      app:valueText="STROKE_1"
      app:displayText="㇐"
      app:keyTextSize="@dimen/key_text_font_size_strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D1 CJK STROKE S -->
    <Key
      app:valueText="STROKE_2"
      app:displayText="㇑"
      app:keyTextSize="@dimen/key_text_font_size_strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D2 CJK STROKE P -->
    <Key
      app:valueText="STROKE_3"
      app:displayText="㇒"
      app:keyTextSize="@dimen/key_text_font_size_strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- About: U+1F6C8 CIRCLED INFORMATION SOURCE -->
    <Key
      app:valueText="ABOUT"
      app:displayText="🛈"
    />
  </Row>
  <Row app:keyWidth="@dimen/key_width_strokes_stroke">
    <!-- U+3001 IDEOGRAPHIC COMMA -->
    <Key
      app:valueText="、"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- U+FF1B FULLWIDTH SEMICOLON -->
    <Key
      app:valueText="；"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- U+31D4 CJK STROKE D -->
    <Key
      app:valueText="STROKE_4"
      app:displayText="㇔"
      app:keyTextSize="@dimen/key_text_font_size_strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+31D6 CJK STROKE HG -->
    <Key
      app:valueText="STROKE_5"
      app:displayText="㇖"
      app:keyTextSize="@dimen/key_text_font_size_strokes_stroke"
      app:keyTextColour="@color/stroke_key_text"
    />
    <!-- U+3005 IDEOGRAPHIC ITERATION MARK -->
    <Key
      app:valueText="DITTO"
      app:displayText="々"
      app:keyTextSize="@dimen/key_text_font_size_strokes_ditto_key"
    />
    <!-- Backspace: U+232B ERASE TO THE LEFT -->
    <Key
      app:valueText="BACKSPACE"
      app:displayText="⌫"
      app:isRepeatable="true"
      app:keyTextSize="@dimen/key_text_font_size_strokes_backspace"
    />
  </Row>
  <Row
    app:keyHeight="@dimen/key_height_strokes_space_bar"
    app:keyWidth="@dimen/key_width_strokes_stroke"
  >
    <!-- Switch to symbols keyboard: U+FF08, U+FF09, U+FF1A -->
    <Key
      app:valueText="SWITCH_TO_SYMBOLS"
      app:displayText="（）："
      app:keyTextSize="@dimen/key_text_font_size_switch_key"
      app:keyTextOffsetY="@dimen/key_text_baseline_correction_switch_key"
    />
    <!-- U+FF0C FULLWIDTH COMMA -->
    <Key
      app:valueText="，"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- Space bar: U+25C0, U+25B6 (triangles) -->
    <!-- TODO: add triangle glyphs to stroke_input_keyboard.ttf -->
    <Key
      app:valueText="SPACE"
      app:displayText="◀ 中文筆畫 ▶"
      app:isLongPressable="true"
      app:isSwipeable="true"
      app:keyTextSize="@dimen/key_text_font_size_space_bar"
      app:keyTextOffsetY="@dimen/key_text_baseline_correction_space_bar"
      app:keyTextColour="@color/space_bar_text"
      app:keyWidth="@dimen/key_width_space_bar"
    />
    <!-- U+3002 IDEOGRAPHIC FULL STOP -->
    <Key
      app:valueText="。"
      app:keyWidth="@dimen/key_width_digit"
    />
    <!-- Enter key: U+23CE RETURN SYMBOL -->
    <Key
      app:valueText="ENTER"
      app:displayText="⏎"
      app:keyTextSize="@dimen/key_text_font_size_enter_key"
      app:keyFillColour="@color/enter_key_fill"
    />
  </Row>
</Keyboard>
